{
  "name": "@direct-software/direct-search",
  "version": "0.1.12",
  "description": "Direct Softwares Search Web Component",
  "main": "direct-search.js",
  "module": "direct-search.js",
  "private": false,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:rollup": "rollup -c",
    "lint": "lit-analyzer && eslint 'src/**/*.ts'",
    "format": "prettier src/* --write",
    "docs": "npm run build && npm run analyze && npm run docs:build && npm run docs:assets && npm run docs:gen",
    "docs:gen": "eleventy --config=.eleventy.cjs",
    "docs:gen:watch": "eleventy --config=.eleventy.cjs --watch",
    "docs:build": "rollup -c --file docs/direct-search.bundled.js",
    "docs:assets": "cp node_modules/prismjs/themes/prism-okaidia.css docs/",
    "docs:serve": "es-dev-server --root-dir=docs --node-resolve --watch",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile custom-elements.json",
    "serve": "es-dev-server --node-resolve --watch",
    "test": "karma start karma.conf.cjs",
    "test:watch": "karma start karma.conf.cjs --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start karma.conf.cjs --update-snapshots",
    "test:prune-snapshots": "karma start karma.conf.cjs --prune-snapshots",
    "checksize": "rollup -c ; cat direct-search.bundled.js | gzip -9 | wc -c ; rm direct-search.bundled.js",
    "prepublish": "npm run build:rollup",
    "publish:npm": "npm publish --access public"
  },
  "keywords": [
    "web component",
    "lit-element",
    "typescript",
    "direct",
    "direct-app"
  ],
  "author": "Tyler Garlick <tyler@directsoftware.com>",
  "license": "BSD-3-Clause",
  "bundledDependencies": [
    "lit-element",
    "@vaadin/vaadin",
    "@smarthtmlelements/smart-elements-community"
  ],
  "dependencies": {
    "@doubletrade/lit-datepicker": "^0.2.1",
    "@smarthtmlelements/smart-elements-community": "^6.2.0",
    "@vaadin/vaadin": "^14.1.17",
    "@vaadin/vaadin-date-picker": "^4.0.7",
    "lit-element": "^2.2.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
    "@open-wc/testing": "^2.5.4",
    "@open-wc/testing-karma": "^3.2.42",
    "@rollup/plugin-replace": "^2.3.1",
    "@types/chai": "^4.2.9",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "chai": "^4.2.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.40.0",
    "eslint": "^6.8.0",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "lit-analyzer": "^1.1.9",
    "mocha": "^6.2.2",
    "prettier": "^1.19.1",
    "rollup": "^1.31.1",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.2.0",
    "typescript": "^3.7.5",
    "web-component-analyzer": "^1.0.3"
  }
}
